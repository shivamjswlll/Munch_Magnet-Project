                  <h5><strong>&nbsp;<%=user.email%></strong></h5>
                </div>
                
                <div editable="rich">
                  <p>
                    CART:&nbsp;&nbsp;<%=user.cart.length%> items
                    <br>
                    ORDERS:&nbsp;&nbsp;<%=user.order.length%> orders
                  </p>
                </div>
                <div class="row mt-12" editable="rich">
                    <button class="border border-secondary w-50" style="background-color: #FFF8DC; color: #000;" onclick="window.location.href = '/updatepassword'">Update Password</button>
                    <button class="border border-secondary w-50" style="background-color: #FFF8DC; color: #000;" onclick="window.location.href = '/logout'">Logout</button>
                </div>
            <!-- <small
